<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="10.0"
          style="-fx-border-color: black; -fx-border-width: 1; -fx-background-color: white;">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label fx:id="lblTitle" text="Media Title" wrapText="true" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-alignment: center;"/>
        <Label fx:id="lblCost" text="0.0 $" style="-fx-font-size: 14px;"/>
        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="btnAddToCart" mnemonicParsing="false" onAction="#btnAddToCartClicked" text="Add to Cart" />
            <Button fx:id="btnPlay" mnemonicParsing="false" onAction="#btnPlayClicked" text="Play" />
        </HBox>
    </VBox>
</AnchorPane>
